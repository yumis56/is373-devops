name: Run Playwright Tests

on:
  workflow_run:
    workflows: ["Build Deploy Hexo"]
    types:
      - completed

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Build Docker Image for Testing
        run: |
          docker build -t playwright-tests .

      - name: Run Playwright Tests
        run: |
          docker run playwright-tests
